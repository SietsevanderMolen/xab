with "libxcb_ada";

project libxab_build is
   type Build_Type is ("Debug", "Production");
   Build : Build_Type := External ("Build", "Production");

   for Source_Dirs use (".");

   package Compiler is
      case Build is
         when "Debug" =>
            for Default_Switches ("Ada") use ("-O2", "-gnatwae", "-gnatyg");
         when "Production" =>
            for Default_Switches ("Ada") use ("-O2", "-gnatp");
      end case;
   end Compiler;
end libxab_build;
