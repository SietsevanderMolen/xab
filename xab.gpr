with "xcbada";

project XAB is
   Version := "0.1";

   for Source_Dirs use ("src/**");
   for Object_Dir use "build";

   package Ide is
      for Documentation_Dir use "doc";
   end Ide;

   package Install is
      for Active use "true";
      for Prefix use "/usr/local";
   end Install;

   for Library_Name use "XAB";
   for Library_Dir use "lib";

end XAB;
